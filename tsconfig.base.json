    "lib": ["DOM", "ES2020"],
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@whoomp/sdk": ["libs/sdk/src"],
      "@whoomp/transport-web-ble": ["libs/transport-web-ble/src"],
      "@whoomp/transport-rn-ble": ["libs/transport-rn-ble/src"],
      "@whoomp/ui-hooks": ["libs/ui-hooks/src"]
    }
  }
}
